<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       default-lazy-init="true"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="t1000_context.xml"/>

    <bean class="com.mec.spring.MyBeanPostProcessor"/>

    <bean id="t1000Conveyor" class="com.mec.spring.T1000Conveyor">
        <lookup-method name="createRobot" bean="t1000"/>
    </bean>

    <bean id="t1000GoldenPoolFromMap" class="com.mec.spring.interfaces.impls.T1000PoolList">
        <property name="robotCollection"
                         value="#{t1000PoolMap.robotCollection.values().?[color.toUpperCase() eq 'GOLD']}"/>
    </bean>
    <bean id="t1000GoldenPoolFromList" class="com.mec.spring.interfaces.impls.T1000PoolList">
        <property name="robotCollection"
                  value="#{t1000PoolList.robotCollection.?[color.toUpperCase() eq 'GOLD']}"/>
    </bean>

    <bean id="t1000PoolList" class="com.mec.spring.interfaces.impls.T1000PoolList">
        <property name="robotCollection">
            <list>
                <ref bean="t1000"/>
                <bean class="com.mec.spring.robots.Model1000" parent="baseModel" scope="prototype">
                    <constructor-arg value="gold" index="3" type="java.lang.String"/>
                    <constructor-arg value="2007" index="4" type="int"/>
                    <constructor-arg value="false" index="5" type="boolean"/>
                </bean>
                <bean class="com.mec.spring.robots.Model1000" parent="baseModel" scope="prototype">
                    <constructor-arg value="silver" index="3" type="java.lang.String"/>
                    <constructor-arg value="2005" index="4" type="int"/>
                    <constructor-arg value="true" index="5" type="boolean"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="t1000PoolMap" class="com.mec.spring.interfaces.impls.T1000PoolMap">
        <constructor-arg name="robotCollection">
            <map>
                <entry key="Terminator 1" value-ref="t1000"/>
                <entry key="Terminator 2" value-ref="t1000"/>
                <entry key="Terminator 3">
                    <bean class="com.mec.spring.robots.Model1000" parent="baseModel" scope="prototype">
                        <constructor-arg value="gold" index="3" type="java.lang.String"/>
                        <constructor-arg value="2007" index="4" type="int"/>
                        <constructor-arg value="false" index="5" type="boolean"/>
                    </bean>
                </entry>
                <entry key="Terminator 3">
                    <bean class="com.mec.spring.robots.Model1000" parent="baseModel" scope="prototype">
                        <constructor-arg value="silver" index="3" type="java.lang.String"/>
                        <constructor-arg value="2005" index="4" type="int"/>
                        <constructor-arg value="true" index="5" type="boolean"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

</beans>
