<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
>

    <import resource="toshiba_context.xml"/>
    <import resource="sony_context.xml"/>

    <bean id="actionReplacer" class="com.mec.spring.robots.ActionReplacer"/>

    <bean id="t1000inheritance" class="com.mec.spring.robots.Model1000" scope="prototype"
          parent="baseModel">

        <constructor-arg value="silver" index="3" type="java.lang.String"/>
        <constructor-arg value="2005" index="4" type="int"/>
        <constructor-arg value="true" index="5" type="boolean"/>

    </bean>

    <bean id="t1000ReplacedMethod" class="com.mec.spring.robots.Model1000" scope="prototype"
          parent="baseModel">

        <constructor-arg value="silver" index="3" type="java.lang.String"/>
        <constructor-arg value="2005" index="4" type="int"/>
        <constructor-arg value="true" index="5" type="boolean"/>

        <replaced-method name="action" replacer="actionReplacer"/>
    </bean>

    <bean id="baseModel">
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
        <constructor-arg ref="sonyHead"/>
    </bean>

    <bean id="t1000" class="com.mec.spring.robots.Model1000" scope="prototype"
          p:hand-ref="toshibaHand" p:leg-ref="sonyLeg" p:head-ref="toshibaHead"
          depends-on="databaseBean">

        <constructor-arg value="Gold" index="0" type="java.lang.String"/>
        <constructor-arg value="2005" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>
