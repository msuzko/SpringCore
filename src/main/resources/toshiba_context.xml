<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
       default-autowire-candidates="false"
>

    <!--    scope="prototype" - создает новый эекземпляр-->
    <bean id="toshibaHead" class="com.mec.spring.toshiba.HeadToshiba" scope="prototype"/>
    <bean id="toshibaHand" class="com.mec.spring.toshiba.HandToshiba"/>
    <bean id="toshibaLeg" class="com.mec.spring.toshiba.LegToshiba"/>

</beans>
